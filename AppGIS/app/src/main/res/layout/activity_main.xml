<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <TextView
        android:id="@+id/label"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:gravity="center_horizontal"
        android:textAllCaps="true"
        android:textSize="20sp"
        android:hint="Hari Ini"/>

    <TextView
        android:id="@+id/tvLong"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center_horizontal"
        android:paddingTop="8dp"
        android:hint="Hasil Long"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tvLat"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center_horizontal"
        android:hint="Hasil Lat"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <EditText
            android:id="@+id/etLokasi"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:paddingTop="5dp"
            android:gravity="center_horizontal"
            android:hint="Masukkan lokasi" />

        <Button
            android:id="@+id/btnTampil"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:text="Tampilkan Long Lat" />

        <Button
            android:id="@+id/btnMapI"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:text="Tampilkan ITATS dalam Maps" />

        <Button
            android:id="@+id/btnMapN"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:text="Tampilkan Narotama dalam Maps" />

        <Button
            android:id="@+id/btnClear"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:text="Clear All"/>


    </LinearLayout>

</LinearLayout>